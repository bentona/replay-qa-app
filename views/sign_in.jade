extends ./layout.jade

block title
  title Sign In

block content
  div.col-md-4.col-md-offset-4(style="margin-top: 10px")
    form(action='/auth')
      input.form-control(type='text' id='email' name='email' placeholder='Email')
      input.form-control(type='password' id='password' name='password' placeholder='Password')
      input.btn.btn-primary.btn-block(type='submit' id='sign_in' value='Sign In')
