extends ./layout.jade

block title
  title Edit

block content
  div.col-md-4.col-md-offset-4
    h1(style="text-align: center") Edit
    form(role='form' action=('/users/'+user._id+'/update') method='post')
      each key in Object.keys(user)
        if key != '_id'
          div.form-group
            label=key
            input.form-control(type='text' name=key value=user[key])
      input.btn.btn-primary.btn-block(type='submit' value='Update')
