#sign-in.col-md-4.col-md-offset-4
  %h1 Sign In

  = form_for :session, url: session_create_path do |f|
    - if flash[:error]
      #error_explanation
        %h2= flash[:error]

    .field
      = f.label :email
      = f.text_field :email, class: 'form-control'
    .field
      = f.label :password
      = f.text_field :password, class: 'form-control'
    .actions
      = f.submit 'Sign In', class: 'btn btn-block btn-primary'
