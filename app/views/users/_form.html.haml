= form_for @user  do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name, class: 'form-control'
  .field
    = f.label :email
    = f.text_field :email, class: 'form-control'
  .field
    = f.label :password
    = f.password_field :password, class: 'form-control'
  .field
    = f.label :confirm_password
    = f.password_field :password_confirmation, class: 'form-control'
  .field
    = f.label :timezone
    = f.text_field :timezone, class: 'form-control'
  .field
    = f.label :locale
    = f.text_field :locale, class: 'form-control'
  .field
    = f.label :locale_id
    = f.text_field :locale_id, class: 'form-control'
  .field
    = f.label :organizationID
    = f.text_field :organizationID, class: 'form-control'
  .field
    = f.label :role
    = f.text_field :role, class: 'form-control'
  .field
    = f.label :customRoleId
    = f.text_field :customRoleId, class: 'form-control'
  .field
    = f.label :phone
    = f.text_field :phone, class: 'form-control'
  .field
    = f.label :verified
    = f.text_field :verified, class: 'form-control'
  .actions
    = f.submit 'Save', class: 'btn btn-block btn-primary'
